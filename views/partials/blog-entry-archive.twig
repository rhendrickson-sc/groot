{% extends 'partials/blog-entry.twig' %}

{# We don't want to redefine the entire blog entry article layout,
we just want to define how certain pieces of the template behave.
In this case, we might just want a "Read More" button at the bottom #}

{% block post_content %}
	<div class="post-content post-excerpt">{{ post.content | excerpt }}</div>
{% endblock %}

{% block after_content %}
	<div class="post-read-more-wrap">
		<a href="{{ post.link }}" class="post-link">Read More</a>
	</div>
{% endblock %}