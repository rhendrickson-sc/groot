<section class="pattern pattern--testimonials">
	<div class="container">
	
			{% if layout.section_headline %}
			<h2 class="pattern__headline">{{ layout.section_headline }}</h2>
			{% endif %}

			<div class="testimonials flexslider">
				<ul class="slides">
					{% for slide in layout.testimonials %}
					<li class="testimonial">
						<div class="container mx950">
							
							<q class="testimonial__quote">{{ slide.quote }}</q>
							<div class="testimonial__author">
								{% if slide.author.image %}<img src="{{ Image(slide.author.image).src('thumbnail') }}" alt="{{ Image(slide.author.image).alt() }}" />{% endif %}
								<h6>{{ slide.author.name }}</h6>
								<span>{{ slide.author.title }}</span>
							</div>

						</div>
					</li>
					{% endfor %}
				</ul>
			</div>

	</div>
</section>