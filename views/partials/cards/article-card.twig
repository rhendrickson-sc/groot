
<article class="card-article {{ cardModifier }}">
	{% if post.thumbnail() %}
		{# Rich Snippet markup for the Featured Image. Note: Google won't display a Rich Snippet without one of these #}
		<div class="card-article__image">
			<img src="{{ Image(post.thumbnail()).src(cardCrop|default('thumbnail')) }}" alt="{{  Image(post.thumbnail()).alt() | default(post.title) }}">
		</div>
	{% endif %}
	<div class="card-article__content">
		<h2 class="h3 title"><a href="{{ post.link }}" title="{{ post.title }}">{{ post.title }}</a></h2>
		<div class="byline">
			<span class="post-author">By <a href="{{ post.author.link() }}">{{ post.author.display_name }}</a></span>
			<span class="post-date">On {{ post.date }}</span>
		</div><!-- //byline -->
		<div class="excerpt">{{ post.content | excerpt(20) }}</div>

		{# {% include 'partials/blog/post-categories.twig' %} #}
		{# {% include 'partials/blog/post-tags.twig' %} #}

		<a class="btn" href="{{ post.link }}">Read More</a>
	</div>
</article>
