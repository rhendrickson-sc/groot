{# just a template for a blog entry, shouldn't be used directly #}

<article class="{{ post.class }}" itemscope itemtype="http://schema.org/BlogPosting">
	{% block post_header %}
		<header>
			<h2 class="title" itemprop="headline"><a href={{ post.link }} title="{{ post.title }}">{{ post.title }}</a></h2>
			<div class="post-publish-info">
				<span class="post-author">
					By
					<a href="{{ post.author.link() }}" rel="author" itemprop="author" itemscope itemtype="http://schema.org/Person">
						<span itemprop="name">{{ post.author }}</span>
					</a>
				</span>
				<time class="post-publish-date" itemprop="datePublished" content="{{ post.date | date('c') }}">{{ post.date }}</time>

				<!-- Rich Snippet markup for this blog post. See: https://developers.google.com/search/docs/data-types/articles -->
				<meta itemprop="dateModified" content="{{ post.modified_date | date('c') }}">
				<span itemprop="publisher" itemscope itemtype="http://schema.org/Organization">
					<meta itemprop="name" content="{{ site.name }}">
					<span itemscope itemprop="logo" itemtype="http://schema.org/ImageObject">
						<meta itemprop="url" content="{{ img_url('logo.png') }}">
						<!-- if logo gets updated, make sure to update dimensions here -->
						<meta itemprop="width" content="395">
						<meta itemprop="height" content="60">
					</span>
				</span>
			</div>
		</header>
	{% endblock %}

	{% block before_content %}
		{% if post.thumbnail() %}
			<!-- Rich Snippet markup for the Featured Image. Note: Google won't display a Rich Snippet without one of these -->
			<div class="post-thumb-container" itemscope itemprop="image" itemtype="http://schema.org/ImageObject">
				<img src="{{ post.thumbnail().src('large') }}" alt="{{ post.thumbnail().alt() | default(post.title) }}" itemprop="url">
				<meta itemprop="width" content="{{ post.thumbnail().width('large') }}">
				<meta itemprop="height" content="{{ post.thumbnail().height('large') }}">
			</div>
		{% endif %}
	{% endblock %}

	{% block post_content %}
		<div class="post-content">{{ post.content }}</div>
	{% endblock %}

	{% block after_content %}
		<div class="post-meta">
			<div class="post-terms post-categories">
				{% include 'partials/blog/post-categories.twig' %}
			</div>
			<div class="post-terms post-tags">
				{% include 'partials/blog/post-tags.twig' %}
			</div>
		</div>
	{% endblock %}
</article>
