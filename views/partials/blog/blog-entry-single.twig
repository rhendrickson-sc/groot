{% extends 'partials/blog/blog-entry.twig' %}

{# We don't want to redefine the entire blog entry article layout,
we just want to define how certain pieces of the template behave.
In this case, we might want some extra navigation at the bottom #}
{% block before_post_header %}{% endblock %}
{% block post_header %}
	<header class="article-header">
		<h1 class="title" itemprop="headline"><a href="{{ post.link }}" title="{{ post.title }}">{{ post.title }}</a></h1>
		<div class="post-publish-info">
			<span class="post-author">By <a href="{{ post.author.link() }}" rel="author" itemprop="author" itemscope itemtype="http://schema.org/Person"><span itemprop="name">{{ post.author }}</span></a></span>
			On
			<time class="post-publish-date" itemprop="datePublished" content="{{ post.date | date('c') }}">{{ post.date }}</time>

			{# Rich Snippet markup for this blog post. See: https://developers.google.com/search/docs/data-types/articles #}
			<meta itemprop="dateModified" content="{{ post.modified_date | date('c') }}">
			<span itemprop="publisher" itemscope itemtype="http://schema.org/Organization">
				<meta itemprop="name" content="{{ site.name }}">
				<span itemscope itemprop="logo" itemtype="http://schema.org/ImageObject">
				<meta itemprop="url" content="{{ img_url('logo.png') }}">
				{# if logo gets updated, make sure to update dimensions here #}
				<meta itemprop="width" content="395">
				<meta itemprop="height" content="60">
				</span>
			</span>
		</div><!-- END .post-publish-info -->
	</header>
{% endblock %}

{# block before_content #}
{# block post_content #}

{% block after_content %}
	{{ parent() }}

	<div class="post-navigation">

		<div class="nav-previous">
			{% if post.prev %}
				<a class="btn" href="{{ post.prev.link }}" title="{{ post.prev.title }}">Previous</a>
			{% endif %}
		</div>
		<div class="nav-next">
			{% if post.next %}
				<a class="btn" href="{{ post.next.link }}" title="{{ post.next.title }}">Next</a>
			{% endif %}
		</div>

	</div>

	<div class="post-back-to-blog-wrap">
		<a href="{{ get_blog_url() }}" class="post-link">Back to Blog</a>
	</div>
{% endblock %}
