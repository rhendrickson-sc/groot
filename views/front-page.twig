{% extends 'layouts/main.twig' %}

{% block main_content %}
	{% for post in posts %}
		<article class="{{post.class}}">
			<h1>{{ post.title }}</h1>

			<h2>front-page.twig</h2>

			<div class="post-content">{{ post.content }}</div>

			<p>
				Using Timber with Twig version: {{ constant('Twig_Environment::VERSION') }}</tt>
			</p>
			<div class="col">
				Here's a dump of everything you get for free from <code>Timber::get_post()</code>
				<pre>{{ dump(post) }}</pre>
			</div>
			<div class="col">
				In every template, you also get access to global variables/functions,
				for example <code>site</code>:
				<pre>{{ dump(site) }}</pre>
			</div>
		</article>
	{% endfor %}
{% endblock %}
