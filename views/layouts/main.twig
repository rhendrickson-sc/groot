<!doctype html>
<html class="no-js">
<head>

	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<title>{% block title %}{{ wp_title }}{% endblock %}</title>

	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

	<link rel="shortcut icon" type="image/png" href="{{ img_url('favicon.png') }}">
	<link rel="apple-touch-icon" href="{{ img_url('favicon-76.png') }}" sizes="76x76">
	<link rel="apple-touch-icon" href="{{ img_url('favicon-120.png') }}" sizes="120x120">
	<link rel="apple-touch-icon" href="{{ img_url('favicon-152.png') }}" sizes="152x152">

	{{ wp_head }}

</head>
<body class="{{ body_classes | join(' ') }}">

	<div class="site-wrapper">
		<div class="site-pusher">

			{% block container_content %}
				<header class="site-header outer-gutter" itemscope itemtype="http://schema.org/Organization">
					<div class="container">
						<a class="logo" href="/" title="{{ site.name }}" itemprop="logo" itemscope itemtype="http://schema.org/ImageObject">
							<img src="https://placehold.it/430x100/00aeef/000?text={{ site.name | url_encode }}" srcset="https://placehold.it/215x50/00aeef/000?text={{ site.name | url_encode }} 1x, https://placehold.it/430x100/00aeef/000?text={{ site.name | url_encode }} 2x" alt="{{ site.name }}" />
							<!-- Rich Snippet/schema.org markup about this Organization -->
							<meta itemprop="url" content="{{ img_url('logo.png') }}">
							<meta itemprop="name" content="{{ site.name }}">
							<meta itemprop="url" content="{{ site.url }}">
							<meta itemprop="description" content="{{ site.description }}">
						</a>

						{# {{ get_search_form() }} #}
						{% include 'partials/nav.twig' with { menu: primary_menu } only %}
					</div>
				</header>

				<main class="site-main">
						{% block main_content %}
							Default main content
						{% endblock %}
				</main>

				<footer class="site-footer outer-gutter">
					{% block footer %}
						&copy; {{ 'now' | date('Y') }} {{ site.name }}<br>
						<a href="https://www.sitecrafting.com" target="_blank">Website Design and Development by SiteCrafting</a>
					{% endblock %}
				</footer>

			{% endblock %}

		</div>
	</div>

	<!-- everything below here is included automagically by WP -->
	{{ wp_footer }}
</body>
</html>
