{
    "name": "sitecrafting/groot",
    "description": "SiteCrafting starter WordPress theme",
    "version": "1.1.3",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Coby Tamayo",
            "email": "ctamayo@sitecrafting.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=7.0",
        "johnpbloch/wordpress-core-installer": "^1.0",
        "johnpbloch/wordpress-core": "^4.9",
        "mnsami/composer-custom-directory-installer": "^1.1",
        "wpackagist-plugin/timber-library": "^1.7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "extra": {
        "wordpress-install-dir": {
            "johnpbloch/wordpress-core": "wp"
        },
        "installer-paths": {
            "wp/wp-content/plugins/{$name}/": [
                "wpackagist-plugin/timber-library"
            ]
        }
    }
}
